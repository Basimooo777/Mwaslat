<div class="container">
		<div class="row">
			<div class="span12">
	<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name) , :html => { :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

 <div class="control-group">
			<%= f.label :email ,:class =>'control-label' %>
			<div class="controls">
			<%= f.email_field :email,:class =>'email-field' %>					
			</div>
		</div>
<div class="control-group">
			<%= f.label :password ,:class =>'control-label' %>
			<div class="controls">
			<%= f.password_field :password ,:class =>'password-field' %>					
			</div>
		</div>
<div class="control-group">
			<%= f.label :password_confirmation ,:class =>'control-label' %>
			<div class="controls">
			<%= f.password_field :password_confirmation ,:class =>'password-field' %>					
			</div>
		</div>
  <div class="form-actions"><%= f.submit "Sign up" ,:class =>'btn btn-small btn-primary' %><br/><br/><br/>
<% end %>

<%= render :partial => "devise/shared/links" %></div>
</div></div></div>
