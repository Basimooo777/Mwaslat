<tr id = "<%=node.id%>">
	<td><%= node.name %></td>
	<td><%= node.category %></td>
	<% if(current_user.admin?) %>
		<td><%=link_to node.user.email, node.user%></td>
	<% end %>
	<td>
		<button class="btn btn-small btn-success" name="showOnMap" onclick="map.showNode('<%= node.name %>', '<%= node.path %>', false)"><i class="icon-eye-open"></i></button>
		<%= link_to edit_node_path(node), :class =>'btn btn-small btn-primary' do %>
		  <i class="icon-edit"></i>
		<% end %>
		<%if(current_user.admin?)%>
			<%= link_to node, :class =>'btn btn-small btn-danger' ,:confirm => 'Are you sure?', :method => :delete do %>
			  <i class="icon-trash"></i>
			<% end %>
		<%else%>
			<%= link_to node, :class =>'btn btn-small btn-danger' ,:confirm => 'Are you sure?', :method => :delete, :remote => true do %>
			  <i class="icon-trash"></i>
			<% end %>
		<%end%>
	</td>
</tr>