<p>
	<fieldset>
		<div class="control-group">
			<%= f.label :name ,:class =>'control-label' %>
			<div class="controls">
			<%= f.text_field :name,:class =>'text_field' %>					
			</div>
		</div>
		<div class="control-group">
			<%= f.label :category ,:class =>'control-label' %>
			<div class="controls">
				<%= f.select :category, Node.all_categories, {}, {:onchange => "show_category_description()"} %>
				<label id = "category_description"> Nieghbouhood, District </label>
			</div>
		</div>
	<%= f.hidden_field :path %>
	<%= f.hidden_field :id %>
	</fieldset>
</p>
