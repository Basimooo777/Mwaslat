<body onload="showNode()">
	<div id="map_canvas" style="width:100%; height:100%"></div>
	<br />
	<div class="container-fluid">
		<div class="row">
			<div class="span9">
				<p id="notice">
					<%= notice %>
				</p>
				
				<h1>My Nodes</h1>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th>Category</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						<% @nodes.each do |node| %>
						<tr>
							<td><%= node.name %></td>
							<td><%= node.category %></td>
							<td> <%= fields_for :node do |f|%>
							<%= f.hidden_field :_destroy %>
							<input type="button" class="btn btn-small btn-danger" value="remove" name="removeNode" onclick="map.clearNode();remove_node(this,'<%= node.id %> ')" />
							<% end %>
							<%= link_to 'Edit', edit_node_path(node), :class =>'btn btn-small btn-primary' %>
							<input type="button" class="btn btn-small btn-success" value="show" name="showOnMap" onclick="map.showNode('<%= node.name %>', '<%= node.path %>', false)" />
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="span3">
				<h1>
				<%= link_to 'New', :action => "new" %>
				</h1>
				</div>
		</div>
	</div>
</body>