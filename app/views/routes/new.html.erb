<body id="bodyId" onload="addStops();prepare_form()">
	<div id="map_canvas" style="width:100%; height:100%"></div>
	<p>
		<%= notice %>
	</p>
	<%= form_for @route do |f_route| %>
		<div id="sub_routes">
				<%= f_route.fields_for :sub_routes do |f_sub_routes|%>
						<%= render "sub_route_fields", :f => f_sub_routes %>
				<%end%>
				<br/>
			<%= link_to_add_sub_route(f_route)%>
		</div>
		<hr width="50%" align="left"/>
		<table>
			<tr>
			<%= f_route.fields_for :transportation, Transportation.new  do |f_trans| %>
				<td><%= f_trans.label :category, "Transportation" %></td>
				<td><%= f_trans.text_field :category %></td>
			<% end %>
			</tr>
			<tr>
				<td><%= f_route.label :cost, "Cost" %></td>
				<td><%= f_route.text_field :cost %></td>
			</tr>
		</table>
		<%= f_route.submit(:onclick => "fillPaths();") %><br/>
	<% end %>
	
	<div style="left: 50%; top: 1%; position: absolute"><%= link_to "See Data", "routes/data"%></div>
</body>