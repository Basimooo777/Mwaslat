<body onload="initialize();fillRoutes()">
    <div id="map_canvas" style="width:100%; height:100%"></div>
    <script type="text/javascript"> 
	    function fillRoutes()
	    {
		    <% @routes.each do |r| %>
		    	showMapRoutes('<%= r.src.get_lats %>','<%= r.src.get_lngs %>', '<%= r.dest.get_lats %>','<%= r.dest.get_lngs %>');
			<% end %>	
	    }   
    </script>
<p><%= notice %></p>

<%= form_for @route , :method => "get" do |f_route| %>

<%= hidden_field_tag :src_lng %>
<%= hidden_field_tag :src_lat %>
<%= hidden_field_tag :dest_lng %>
<%= hidden_field_tag :dest_lat %>
<table>
	<tr>
		<td><%= f_route.label :time %></td>
		<td><%= f_route.text_field :time %></td>
	</tr>
	<tr>
		<td><%= f_route.label :cost %></td>
		<td><%= f_route.text_field :cost %></td>
	</tr>
</table>
<%= fields_for :src do |f_src| %>
<table>
	<tr>
		<td><%= f_src.label "source district" %></td>
		<td><%= f_src.text_field :district %></td>
	</tr>
</table>
<% end %>
<table id="streets_src">
	<tr>
		<td><label>Street name(s)</label></td>
		<td><input id="street_src1" name="street_src1" size="30" type="text" /></td>
		<td><button type="button" onclick="add_street('src')">Add Street</button></td>
		<td><input id="count_src" name="count_src" type="hidden" value="1"/></td>
	</tr>
</table>
<%= fields_for :dest do |f_dest| %>
<table>
	<tr>
		<td><%= f_dest.label "Destination District" %></td>
		<td><%= f_dest.text_field :district %></td>
	</tr>
</table>
<% end %>

<table id="streets_dest">
	<tr>
		<td><label>Street name(s)</label></td>
		<td><input id="street_dest1" name="street_dest1" size="30" type="text" /></td>
		<td><button type="button" onclick="add_street('destination')">Add Street</button></td>
		<td><input id="count_dest" name="count_dest" type="hidden" value="1"/></td>
	</tr>
</table>
<%= fields_for :trans do |f_trans| %>
<table>
	<tr>
		<td><%= f_trans.label "Transportation" %></td>
		<td><%= f_trans.text_field :name %></td>
	</tr>
</table>
<% end %>
<br />
<!-- <%= f_route.submit("Add route",:onclick => "set_values();") %> -->
 <%= f_route.submit("Add Route", :onclick => 'setValues();') %> 
<% end %>

<div style="position: absolute; left: 60%; top: 60%">
	<%= link_to "قم بالبحث عن الطرق" , :action => "search" %>
</div>
</body>