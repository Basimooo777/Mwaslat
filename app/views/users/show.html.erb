<h2>Nodes</h2>
<table id="users_nodes" class="table table-striped table-bordered" >
	<thead>
		<tr>
			<th>Name</th>
			<th>Category</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @nodes.each do |node| %>
		<tr id="row<%= node.id %>">
			<td><%= node.name %></td>
			<td><%= node.category %></td>
			<td><%= link_to 'Edit', edit_node_path(node), :class =>'btn btn-small btn-primary' %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<h2>Routes</h2>
<table id="users_routes" class="table table-striped table-bordered" >
	<thead>
		<tr>
			<th>Id</th>
			<th>Cost</th>
			<th>Transportation Type</th>
			<th>Transportation Way</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @routes.each do |route| %>
		<tr>
			<td><%= route.id %></td>
			<td><%= route.cost %></td>
			<td><%= route.transportation.category %></td>
			<td><%= route.transportation.way %></td>
			<td><%= link_to 'Edit', edit_route_path(route) %></td>
			<td><%= link_to 'Destroy', route, :confirm => 'Are you sure?', :method => :delete %></td>
			<td><%= link_to 'Show', route %></td>
		</tr>
		<% end %>
	</tbody>
</table>